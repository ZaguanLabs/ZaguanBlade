{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ZaguanBlade",
  "version": "0.1.0-alpha",
  "identifier": "com.zaguan.zblade",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Zagu√°n Blade (alpha)",
        "width": 1920,
        "height": 1080,
        "resizable": true,
        "decorations": false,
        "center": true,
        "visible": false,
        "transparent": false,
        "backgroundColor": [10, 10, 10, 255]
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "appimage",
      "nsis",
      "msi",
      "app",
      "dmg",
      "deb",
      "rpm"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
